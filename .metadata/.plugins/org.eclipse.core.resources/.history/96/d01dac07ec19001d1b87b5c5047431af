        // calculator program

package Jitendra;
import java.util.Scanner;
public class Calculator_program {
	public static void main(String[] args) {
		int a,b, ch;
		int add = 0, sub = 0, mul = 0, div = 0, mod = 0;
		System.out.println("Enter two number:");
		Scanner s = new Scanner(System.in);
		a = s.nextInt();
		b = s.nextInt();
		System.out.print("Select operation:");
		System.out.println("\n1."+add+"\n2."+sub+"\n3."+mul+"\n4."+div+"\n5."+mod);
	    ch = s.nextInt();
		if(ch==1) {
			add = a+b;
			System.out.print("Addition is:"+add);
		}else if(ch==2) {
			sub = a-b;
			System.out.print("Substraction is:"+sub);
		}else if(ch==3) {
			mul = a*b;
			System.out.print("Multiplication is:"+mul);
		}else if(ch==4) {
			div = a/b;
			System.out.print("Division is:"+div);
		}else {
			mod = a%b;
			System.out.print("Modulo is:"+mod);
		}
		s.close();
	}
}
