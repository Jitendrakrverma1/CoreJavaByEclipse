package Jitendra;
import java.util.Scanner;
public class Sum_of_Even_Odd_Num {
	public static void main(String[] args) {
		int n,i,sum=0;
		Scanner s = new Scanner(System.in);
		System.out.print("Enter the num:");
		n = s.nextInt();
		for(i=0; i<=n; i++)
	    {
			if(i%2==0) 
			{
				sum = sum + i;
			}
			else {
				sum = sum +i;
			}
			System.out.print("Sum of even num::"+sum+" ");
			System.out.print("Sum of Odd Num:"+sum+" ");
			s.close();
		}
	}
}
