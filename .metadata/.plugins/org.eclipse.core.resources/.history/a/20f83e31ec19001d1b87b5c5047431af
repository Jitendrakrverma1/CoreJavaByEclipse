        // calculator program

package Jitendra;
import java.util.Scanner;
public class Calculator_program {
	public static void main(String[] args) {
		int a,b, ch,result;
		System.out.println("Enter two number:");
		Scanner s = new Scanner(System.in);
		a = s.nextInt();
		b = s.nextInt();
		System.out.print("Select operation:");
	    ch = s.nextInt();
		if(ch==1) {
			result = a+b;
			System.out.print("Addition is:"+result);
		}else if(ch==2) {
			result = a-b;
			System.out.print("Substraction is:"+result);
		}else if(ch==3) {
			result = a*b;
			System.out.print("Multiplication is:"+result);
		}else if(ch==4) {
			result = a/b;
			System.out.print("Division is:"+result);
		}else {
			result = a%b;
			System.out.print("Modulo is:"+result);
		}
		s.close();
	}
}
